<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel styleName="addContactContainer">
		<table cellpadding="4">
			<tr>
				<td width="150px" style="text-align: right">
					<g:Label>First Name</g:Label>
				</td>
				<td>
					<g:TextBox ui:field="firstNameInput" styleName="contactDetailInput"></g:TextBox>
				</td>				
			</tr>
			
			<tr>
				<td style="text-align: right">
					<g:Label>Middle Name</g:Label>
				</td>
				<td>
					<g:TextBox ui:field="middleNameInput" styleName="contactDetailInput"></g:TextBox>
				</td>
			</tr>
			
			<tr>
				<td style="text-align: right">
					<g:Label>Last Name</g:Label>
				</td>
				<td>
					<g:TextBox ui:field="lastNameInput" styleName="contactDetailInput"></g:TextBox>
				</td>
			</tr>
			
			<tr>
				<td style="text-align: right">
					<g:Label>Address</g:Label>
				</td>
				<td>
					<g:TextBox ui:field="addressInput" styleName="contactDetailInput"></g:TextBox>
				</td>
			</tr>
			
			<tr>
				<td style="text-align: right">
					<g:Label>Mobile</g:Label>
				</td>
				<td>
					<g:TextBox ui:field="mobileInput" styleName="contactDetailInput"></g:TextBox>
				</td>
			</tr>
			
			<tr>
				<td style="text-align: right">
					<g:Label>Email Id</g:Label>
				</td>
				<td>
					<g:TextBox ui:field="emailIdInput" styleName="contactDetailInput"></g:TextBox>
				</td>
			</tr>
		
		</table>
		<g:Button ui:field="saveContactBtn">Save</g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 