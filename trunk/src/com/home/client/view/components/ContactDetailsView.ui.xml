<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
		.important {
			font-weight: bold;
		}
	</ui:style>
	<g:HTMLPanel styleName="contactsDetailContainer">
		<div class="contactDetailHeader"><g:Label>Contact Details</g:Label></div>
		<g:HTMLPanel styleName="contactsDetailBodyContainer">
			<table>
				<tr>
					<td>
						<g:Label text="Name: "></g:Label>
					</td>
					<td>
						<g:Label ui:field="nameField"></g:Label>
					</td>
				</tr>
				
				<tr>
					<td>
						<g:Label text="Address: "></g:Label>
					</td>
					<td>
						<g:Label ui:field="addressField"></g:Label>
					</td>
				</tr>
				
				<tr>
					<td>
						<g:Label text="Mobile: "></g:Label>
					</td>
					<td>
						<g:Label ui:field="mobileField"></g:Label>
					</td>
				</tr>		
			</table>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 